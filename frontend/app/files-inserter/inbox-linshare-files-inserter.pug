.modal.inbox-linshare-files-inserter-modal.full-screen
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-label=__('Close'), ng-click="$hide()")
          span(aria-hidden="true") &times;
        h4.modal-title #{__('Insert files from LinShare')}
      .modal-body.overflow-none
        linshare-myspace-file-browser(selected-nodes='$ctrl.selectedNodes')
      .modal-footer.flex
        .flex-vertical-centered.flex-end
          button.btn.btn-link(type="button", ng-click="$hide()")
            | #{__('Cancel')}
          button.btn.btn-primary(ng-click="$ctrl.insert(); $hide();", ng-disabled="!($ctrl.selectedNodes.length > 0)")
            | #{__('Insert')}
